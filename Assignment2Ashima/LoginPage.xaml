<Window x:Class="Assignment2Ashima.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="200" Width="300">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Username:" Width="82" Height="22"/>
                <TextBox x:Name="UsernameTextBox" Width="82" Height="33"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Password:" Width="82" Height="22"/>
                <PasswordBox x:Name="PasswordBox" Width="82" Height="33"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Login" Click="LoginButton_Click" Margin="6" Width="70" Height="20" />
                <Button Content="Cancel" Click="CancelButton_Click" Margin="6" Width="70" Height="20" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
